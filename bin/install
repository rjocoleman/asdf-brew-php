#!/usr/bin/env bash

set -euo pipefail

install_php_from_brew() {
    local formula="shivammathur/php/php@${ASDF_INSTALL_VERSION}"
    local keg=$(brew --prefix $formula)
    brew tap shivammathur/php
    brew install $formula
    stat "${keg}"
    ln -s "${keg}/bin" bin
    ln -s "${keg}/sbin" sbin
}

install_php_from_brew
